{
    "plugins": ["wdio"],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": ["eslint:recommended", "plugin:wdio/recommended"],
    "overrides": [
        {
            "env": {
                "node": true
            },
            "files": [".eslintrc.{js,cjs}"],
            "parserOptions": {
                "sourceType": "script"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "wdio/no-pause": "off",
        "no-unused-vars": ["warn"]
    },
    "globals": {
        "Given": "readonly"
    }
}
